<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="MyCars.MyCars.controller.MyRCA"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:semantic="sap.m.semantic" xmlns:smartfield="sap.ui.comp.smartfield"
	xmlns:smartform="sap.ui.comp.smartform" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<semantic:FullscreenPage id="pageRCA" title="{i18n>rcaPageTitle}" showNavButton="true" navButtonPress="onNavBack">
		<SplitContainer id="FormSplitscreenRCA">
			<detailPages>
				<Page id="pageRCA1" showHeader="true">
					<customHeader>
						<Bar>
							<contentRight>
								<Button id="edit" text="Cauta alta masina" press="handleCarPress"/>
							</contentRight>
						</Bar>
					</customHeader>
					<VBox class="sapUiSmallMargin">
						<f:Form id="FormDisplayRCA" editable="false">
							<f:title>
								<core:Title text="Informatii"/>
							</f:title>
							<f:layout>
								<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="1" emptySpanL="1"
									emptySpanM="1" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
							</f:layout>
							<f:formContainers>
								<f:FormContainer>
									<f:formElements>
										<f:FormElement label="Nume">
											<f:fields>
												<Text text="{localModel>/Nume}" id="Nume"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Prenume">
											<f:fields>
												<Text text="{localModel>/Prenume}" id="Prenume"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Marca">
											<f:fields>
												<Text text="{localModel>/Marca}" id="marca"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Numar de inmatriculare">
											<f:fields>
												<Text text="{localModel>/Numar}" id="numar"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Asigurator RCA">
											<f:fields>
												<Text text="{localModel>/Rca}" id="RCA"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Valabilitate RCA">
											<f:fields>
												<Text text="{localModel>/DataRca}" id="dRCA"/>
											</f:fields>
										</f:FormElement>
									</f:formElements>
								</f:FormContainer>
							</f:formContainers>
						</f:Form>
					</VBox>
				</Page>
			</detailPages>
			<masterPages>
				<Page id="masterRCA" title="Masini" icon="sap-icon://action" class="sapUiStdPage">
					<content>
						<List id="list" items="{garaj>/cars}">
							<items>
								<ObjectListItem title="{garaj>Id}" type="Active" press="handleMasterCasco">
									<attributes>
										<ObjectAttribute text="{garaj>Marca}"/>
									</attributes>
								</ObjectListItem>
							</items>
						</List>
					</content>
				</Page>
			</masterPages>
		</SplitContainer>
	</semantic:FullscreenPage>
</mvc:View>