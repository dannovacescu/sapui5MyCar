<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:Form id="FormChangeEvent" editable="true">
			<f:layout>
				<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="1" emptySpanL="1"
					emptySpanM="1" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="Nume">
							<f:fields>
								<Input value="{localModel1>/Nume}" id="Nume"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Descriere">
							<f:fields>
								<Input value="{localModel1>/Descriere}" id="Descriere"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Data">
							<f:fields>
								<Input value="{localModel1>/Data}" id="Data"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Ora">
							<f:fields>
								<Input value="{localModel1>/Ora}" id="Ora"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
</core:FragmentDefinition>